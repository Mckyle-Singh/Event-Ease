@{
    ViewData["Title"] = "Home Page";
}

<head>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" integrity="sha384-KyZXEAg3QhqLMpG8r+Knujsl5+5hb5g8lKc5fOX9Y5EzeqqpREsZZH2ojZrG57Qm" crossorigin="anonymous">
</head>


<div class="container-fluid p-0">
    <div id="customCarousel" class="carousel slide" data-bs-ride="carousel" data-bs-interval="5000">
        <!-- Carousel Indicators -->
        <div class="carousel-indicators">
            <button type="button" data-bs-target="#customCarousel" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
            <button type="button" data-bs-target="#customCarousel" data-bs-slide-to="1" aria-label="Slide 2"></button>
            <button type="button" data-bs-target="#customCarousel" data-bs-slide-to="2" aria-label="Slide 3"></button>
        </div>

        <!-- Carousel Content -->
        <div class="carousel-inner">
            <div class="carousel-item active" style="background-image: url('https://picsum.photos/1920/800'); background-size: cover; background-position: center;">
                <div class="carousel-caption">
                    <h2><a href="#">Find the perfect venue for every occasion—seamless, stylish, and stress-free!</a></h2>
                    <p>Lorem ipsum dolor sit amet, consectetur adipisicing elit.</p>
                </div>
            </div>
            <div class="carousel-item" style="background-image: url('https://picsum.photos/1920/801'); background-size: cover; background-position: center;">
                <div class="carousel-caption">
                    <h2><a href="#">17 Stunning Venues to Transform Your Dream Event into Reality.</a></h2>
                    <p>Lorem ipsum dolor sit amet, consectetur adipisicing elit.</p>
                </div>
            </div>
            <div class="carousel-item" style="background-image: url('https://picsum.photos/1920/802'); background-size: cover; background-position: center;">
                <div class="carousel-caption">
                    <h2><a href="#">13 Unforgettable Venues to Make Your Celebrations Truly Magical </a></h2>
                    <p>Lorem ipsum dolor sit amet, consectetur adipisicing elit.</p>
                </div>
            </div>
        </div>

        <!-- Carousel Controls -->
        <button class="carousel-control-prev" type="button" data-bs-target="#customCarousel" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#customCarousel" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
        </button>
    </div>
</div>

<div class="container section did-you-know">
    <h3 class="text-center">Did You Know?</h3>
    <div class="row text-center">
        <div class="col-md-4">
            <div class="fact-box">
                <i class="bi bi-lightbulb-fill fact-icon"></i>
                <h5 class="mt-3">Largest Event Venue</h5>
                <p>The Hannover Fairground is the world’s largest event venue, covering 496,000 square meters!</p>
            </div>
        </div>
        <div class="col-md-4">
            <div class="fact-box">
                <i class="bi bi-people-fill fact-icon"></i>
                <h5 class="mt-3">Biggest Concert Crowd</h5>
                <p>In 1997, 3.5 million people attended Rod Stewart’s concert at Copacabana Beach!</p>
            </div>
        </div>
        <div class="col-md-4">
            <div class="fact-box">
                <i class="bi bi-geo-alt-fill fact-icon"></i>
                <h5 class="mt-3">Unique Venue</h5>
                <p>You can host events at an underwater restaurant in the Maldives—it's breathtaking!</p>
            </div>
        </div>
    </div>

<div class="container section">
    <h3 class="text-center">Explore Stunning Venues</h3>
    <div class="row">
        <div class="col-md-4">
            <div class="card">
                <img src="https://picsum.photos/400/300?random=1" class="card-img-top" alt="Venue Image">
                <div class="card-body">
                    <h5 class="card-title">Luxury Hall</h5>
                    <p class="card-text">Perfect for weddings and galas.</p>
                        <button class="btn btn-primary">View More</button>
                    </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card">
                <img src="https://picsum.photos/400/300?random=2" class="card-img-top" alt="Venue Image">
                <div class="card-body">
                    <h5 class="card-title">Scenic Garden</h5>
                    <p class="card-text">Ideal for outdoor parties and ceremonies.</p>
                        <button class="btn btn-primary">View More</button>
                    </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card">
                <img src="https://picsum.photos/400/300?random=3" class="card-img-top" alt="Venue Image">
                <div class="card-body">
                    <h5 class="card-title">Tech Hub</h5>
                    <p class="card-text">Modern space for conferences and tech events.</p>
                    <button  class="btn btn-primary">View More</button>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="container section">
    <h3 class="text-center">Featured Events & Venues</h3>
    <div class="row">
        <div class="col-md-6">
            <div class="card">
                <img src="https://picsum.photos/600/400?random=4" class="card-img-top" alt="Event Image">
                <div class="card-body">
                    <h5 class="card-title">Rio Carnival</h5>
                    <p class="card-text">Celebrate the world’s largest carnival with color and joy.</p>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card">
                <img src="https://picsum.photos/600/400?random=5" class="card-img-top" alt="Venue Image">
                <div class="card-body">
                    <h5 class="card-title">Sydney Opera House</h5>
                    <p class="card-text">An iconic venue hosting over 1,500 performances annually.</p>
                </div>
            </div>
        </div>
    </div>
</div>
