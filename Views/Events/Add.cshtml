@model Event_Ease.Models.ViewModels.AddEventViewModel

<head>
    <script src="https://cdn.jsdelivr.net/npm/jquery@3.6.0/dist/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/jquery-validation@1.19.3/dist/jquery.validate.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/jquery-validation-unobtrusive@3.2.12/dist/jquery.validate.unobtrusive.min.js"></script>
</head>


<div style="display: flex; font-family: Arial, sans-serif; margin: 20px; gap: 20px; background: #f9f9f9; border-radius: 10px; padding: 20px; box-shadow: 0 4px 10px rgba(0,0,0,0.1);">
    <div style="flex: 2; padding-left: 50px;">
        <h2 style="color: #333;">Add Event Details</h2>
        <form method="post">
            <div class="mt-3">
                <label class="form-label">Event Name</label>
                <input type="text" class="form-control" asp-for="EventName" required maxlength="100"></input>
                <span asp-validation-for="EventName" class="text-danger"></span>
            </div>
            <div class="mt-3">
                <label class="form-label" for="VenueID">Venue</label>
                <select class="form-control" id="VenueID" asp-for="VenueID" asp-items="Model.Venues">
                    <option value="" disabled selected>Select a venue</option>
                    <option value="" selected>No Venue in mind </option>
                </select>
            </div>
            <div class="mt-3">
                <label class="form-label">Start Date</label>
                <input type="date" class="form-control" value="@DateTime.Today.ToString("yyyy-MM-dd")" asp-for="EventStartDate" required></input>
                <span asp-validation-for="EventStartDate" class="text-danger"></span>
            </div>
            <div class="mt-3">
                <label class="form-label">End Date</label>
                <input type="Date" class="form-control" value="@DateTime.Today.ToString("yyyy-MM-dd")" asp-for="EventEndDate" required></input>
                <span asp-validation-for="EventEndDate" class="text-danger"></span>
            </div>
            <div class="mt-3">
                <label class="form-label">Description</label>
                <input type="text" class="form-control" asp-for="Description" required maxlength="200"></input>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="mt-3">
                <button type="submit" class="btn btn-primary">save</button>
            </div>
        </form>
    </div>
    <!-- Right Side: Full Image with Overlay Text -->
    <div style="flex: 1; position: relative; border-radius: 10px; overflow: hidden; box-shadow: 0 4px 10px rgba(0,0,0,0.1);">
        <div style="width: 100%; height: 100%; background-image: url('https://picsum.photos/600/400'); background-size: cover; background-position: center; position: absolute; top: 0; left: 0;"></div>
    </div>
</div>