@model Event_Ease.Models.ViewModels.AddEventViewModel

<h1>Add Event</h1>

<form method="post">
    <div class="mt-3">
        <label class="form-label">Event Name</label>
        <input type="text" class="form-control" asp-for="EventName"></input>
    </div>

    <div class="mt-3">
        <label class="form-label">Start Date</label>
        <input type="date" class="form-control" value="@DateTime.Today.ToString("yyyy-MM-dd")" asp-for="EventStartDate"></input>
    </div>

    <div class="mt-3">
        <label class="form-label">End Date</label>
        <input type="Date" class="form-control" value="@DateTime.Today.ToString("yyyy-MM-dd")" asp-for="EventEndDate"></input>
    </div>

    <div class="mt-3">
        <label class="form-label">Description</label>
        <input type="text" class="form-control" asp-for="Description"></input>
    </div>

    <div class="mt-3">
        <label class="form-label" for="VenueID">Venue</label>
        <select class="form-control" id="VenueID" asp-for="VenueID" asp-items="Model.Venues">
            <option value="" disabled selected>Select a venue</option>
            <option value="" selected>No Venue in mind </option>
        </select>
    </div>

    <div class="mt-3">
        <button type="submit" class="btn btn-primary">save</button>
    </div>
</form>