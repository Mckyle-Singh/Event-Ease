@model Event_Ease.Models.Entities.Event

<h1>Edit Event</h1>

<form method="post">
    <input type="hidden" asp-for="EventID" />
    <div class="mt-3">
        <label class="form-label">Event Name</label>
        <input type="text" class="form-control" asp-for="EventName"></input>
    </div>

    <div class="mt-3">
        <label class="form-label">Start Date</label>
        <input type="date" class="form-control" value="@DateTime.Today.ToString("yyyy-MM-dd")" asp-for="EventStartDate"></input>
    </div>

    <div class="mt-3">
        <label class="form-label">End Date</label>
        <input type="Date" class="form-control" value="@DateTime.Today.ToString("yyyy-MM-dd")" asp-for="EventEndDate"></input>
    </div>

    <div class="mt-3">
        <label class="form-label">Description</label>
        <input type="text" class="form-control" asp-for="Description"></input>
    </div>

    <div class="mt-3">
        <label class="form-label">Venue</label>
        <select class="form-control" asp-for="VenueID" asp-items="ViewBag.Venues">
            <option value="" disabled>Select a venue</option>
            <option value="">No Venue</option>
        </select>
    </div>

    <div class="mt-3">
        <button type="submit" class="btn btn-primary">save</button>
    </div>
</form>