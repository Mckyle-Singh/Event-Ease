@{
}
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model Event_Ease.Models.ViewModels.AddVenueViewModel

<head>
    <script src="https://cdn.jsdelivr.net/npm/jquery@3.6.0/dist/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/jquery-validation@1.19.3/dist/jquery.validate.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/jquery-validation-unobtrusive@3.2.12/dist/jquery.validate.unobtrusive.min.js"></script>
</head>
<h1>Add Venue</h1>

<form method="post">
    <div class="mt-3">
        <label class="form-label">Venue Name</label>
        <input type="text" class="form-control" asp-for="VenueName" required maxlength="100" input />
        <span asp-validation-for="VenueName" class="text-danger"></span>
    </div>
    <div class="mt-3">
        <label class="form-label">Venue Location</label>
        <input type="text" class="form-control" asp-for="Location" required maxlength="100" input />
        <span asp-validation-for="Location" class="text-danger"></span>
    </div>

    <div class="mt-3">
        <label class="form-label">Venue Capacity</label>
        <input type="number" class="form-control" asp-for="Capacity" required min="1" max="10000" input />
        <span asp-validation-for="Capacity" class="text-danger"></span>
    </div>

    <div class="mt-3">
        <label class="form-label">Venue Image</label>
        <input type="url" class="form-control" asp-for="ImageUrl" required input />
        <span asp-validation-for="ImageUrl" class="text-danger"></span>
    </div>

    <div class="mt-3">
        <label class="form-label">Venue Description</label>
        <input type="text" class="form-control" asp-for="Description" required maxlength="500" input />
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="mt-3">
        <input type="checkbox" id="Active" class="form-check-input" asp-for="IsActive" input />
        <label class="form-check-label" for="Active">Is Active</label>
    </div>

    <div class="mt-3">
        <button type="submit" class="btn btn-primary">save</button>
    </div>
</form>