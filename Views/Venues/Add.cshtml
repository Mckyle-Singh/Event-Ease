@model Event_Ease.Models.ViewModels.AddVenueViewModel

<h1>Add Venue</h1>

<form method="post">
    <div class="mt-3">
        <label class="form-label">Venue Name</label>
        <input type="text" class="form-control" asp-for="VenueName" input/>
    </div>
    <div class="mt-3">
        <label class="form-label">Venue Location</label>
        <input type="text" class="form-control" asp-for="Location" input/>
    </div>

    <div class="mt-3">
        <label class="form-label">Venue Capacity</label>
        <input type="number" class="form-control" asp-for="Capacity" input/>
    </div>

    <div class="mt-3">
        <label class="form-label">Venue Image</label>
        <input type="url" class="form-control" asp-for="ImageUrl" input/>
    </div>

    <div class="mt-3">
        <label class="form-label">Venue Description</label>
        <input type="text" class="form-control" asp-for="Description" input/>
    </div>

    <div class="mt-3">
        <input type="checkbox" id="Active" class="form-check-input" asp-for="IsActive" input />
        <label class="form-check-label" for="Active">Is Active</label>
    </div>

    <div class="mt-3">
        <button type="submit" class="btn btn-primary">save</button>
    </div>
</form>