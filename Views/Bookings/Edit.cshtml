@model Event_Ease.Models.Entities.Booking

<h1>Edit a booking</h1>

@if(Model is null)
{
    <p>
        No Booking was found with this ID 
    </p>
}
else{

    <form method="post">
        <input type="hidden" asp-for="BookingID" />
        <div class="form-group">
            <label for="EventID">Select Event:</label>
            <select asp-for="EventID" asp-items="ViewBag.Events" class="form-control">
                <option value="">-- Select an Event --</option>
            </select>
        </div>
        <div class="form-group">
            <label for="BookingDate">Booking Date:</label>
            <input asp-for="BookingDate" type="date" class="form-control" />
        </div>
        <button type="submit" class="btn btn-primary">Confirm Booking</button>
    </form>
}