@model List< Event_Ease.Models.Entities.Booking>

<!-- Add Jumbotron Section -->
<div class="jumbotron jumbotron-fluid text-center bg-light p-4 mb-4">
    <div class="container">
        <h1 class="display-4">All Bookings</h1>
        <p class="lead">Explore the perfect venues tailored to your needs</p>
    </div>
</div>
<!-- Filter Section -->
<div class="container mb-4">
    <div class="row">
        <div class="col-md-4">
            <input type="text" class="form-control" placeholder="Search by name">
        </div>
        <div class="col-md-4">
            <select class="form-control">
                <option selected disabled>Filter by location</option>
                <option>New York</option>
                <option>Los Angeles</option>
                <option>Chicago</option>
                <option>Miami</option>
            </select>
        </div>
        <div class="col-md-4">
            <select class="form-control">
                <option selected disabled>Filter by capacity</option>
                <option>1-100</option>
                <option>101-500</option>
                <option>501-1000</option>
                <option>1001+</option>
            </select>
        </div>
    </div>
</div>
<div class="table-responsive shadow rounded">
    <table class="table table-hover table-bordered align-middle text-center">
        <thead class="table-dark">
            <tr>
                <th>Event Name</th>
                <th>Start Date</th>
                <th>End Date</th>
                <th>Venue</th>
                <th>Date of booking</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var Bookings in Model)
            {
                <tr>
                    <td>@Bookings.Event.EventName</td>
                    <td>@Bookings.Event.EventStartDate</td>
                    <td>@Bookings.Event.EventEndDate</td>
                    <td>@(Bookings.Venue != null ? Bookings.Venue.VenueName : "No Venue selected")</td>
                    <td>@Bookings.BookingDate</td>
                    <td>
                        <a asp-controller="Bookings" asp-action="Edit" asp-route-id="@Bookings.BookingID" class="btn btn-primary">Edit</a>
                        <form asp-controller="Bookings" asp-action="Delete" asp-route-id="@Bookings.BookingID" method="post" style="display:inline;">
                            <button type="submit" class="btn btn-danger">Delete</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
