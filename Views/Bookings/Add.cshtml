@model Event_Ease.Models.ViewModels.AddBookingViewModel

<head>
    <script src="https://cdn.jsdelivr.net/npm/jquery@3.6.0/dist/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/jquery-validation@1.19.3/dist/jquery.validate.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/jquery-validation-unobtrusive@3.2.12/dist/jquery.validate.unobtrusive.min.js"></script>
</head>

<h1>Make a booking</h1>

<form  method="post">
    <div class="form-group">
        <label for="EventID">Select Event:</label>
        <select asp-for="EventID" asp-items="Model.Events" class="form-control">
            <option value="">-- Select an Event --</option>
        </select>
        <span asp-validation-for="EventID" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="BookingDate">Booking Date:</label>
        <input asp-for="BookingDate" type="date" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Confirm Booking</button>
</form>